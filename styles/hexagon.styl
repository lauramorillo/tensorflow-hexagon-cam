@font-face
    font-family 'bump_it_upregular'
    src url('fonts/bumpitup-webfont.eot')
    src url('fonts/bumpitup-webfont.eot?#iefix') format('embedded-opentype'),
         url('fonts/bumpitup-webfont.woff2') format('woff2'),
         url('fonts/bumpitup-webfont.woff') format('woff'),
         url('fonts/bumpitup-webfont.ttf') format('truetype'),
         url('fonts/bumpitup-webfont.svg#bump_it_upregular') format('svg')
    font-weight normal
    font-style normal

html, body
	position relative
	width 100%
	min-height 100%
	padding 0
	margin 0

canvas.playing
  cursor none

.hjs.timer
	display block
	position absolute
	top 0
	right 0
	background-color #000
	color #fff
	padding 12px 25px
	font-size 25px
	font-family 'bump_it_upregular', monospace
	&:after
		content ''
		position absolute
		display block
		width 0
		height 0
		bottom 0
		right 100%
		border-style solid
		border-width 0 10px 15px 0
		border-color transparent #000 transparent transparent

.hjs.label
	display block
	position absolute
	top 0
	right 100%
	background-color #000
	color #fff
	padding 9px 18px
	padding-right 36px
	font-size 18px
	font-family 'bump_it_upregular', monospace
	&:after
		content ''
		position absolute
		display block
		width 0
		height 0
		bottom 0
		right 100%
		border-style solid
		border-width 0 27px 41px 0
		border-color transparent #000000 transparent transparent

.hjs.level
	display flex
	justify-content center
	align-items center
	flex-direction column
	position absolute
	top 0
	left 0
	background-color #000
	color #fff
	padding 9px 18px
	font-size 18px
	font-family 'bump_it_upregular', monospace
	& > div
		display block
		width 100%
		height 3px
		background-color rgba(255,255,255,.1)
		margin-top 5px
		& > div
			display block
			position relative
			height 3px
			width 0
	&:after
		content ''
		position absolute
		display block
		width 0
		height 0
		bottom 0
		left 100%
		border-style solid
		border-width 49px 27px 0 0
		border-color #000 transparent transparent transparent
